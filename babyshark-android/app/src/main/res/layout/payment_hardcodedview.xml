<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ADD8E6"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableLayout
            android:id="@+id/fees"
            android:weightSum="3"
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:text="Blood Test"
                    android:textStyle="italic"
                    android:layout_margin="10dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:layout_weight="2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:text="$XXX"
                    android:layout_margin="10dp"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="X-Ray"
                    android:textStyle="italic"
                    android:layout_margin="10dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:layout_weight="2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:text="$XXX"
                    android:layout_margin="10dp"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Consultation"
                    android:textStyle="italic"
                    android:layout_margin="10dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:layout_weight="2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:text="$XXX"
                    android:layout_margin="10dp"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Dispensable"
                    android:textStyle="italic"
                    android:layout_margin="10dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:layout_weight="2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:text="$XXX"
                    android:layout_margin="10dp"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_below="@+id/fees"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:textStyle="italic"
                    android:layout_margin="10dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:layout_weight="1.5"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:text="Total: $XXX"
                    android:layout_margin="10dp"
                    android:layout_width="0dip"
                    android:layout_weight="1.5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_above="@+id/mastercard"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:text="Please Select Payment Method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/mastercard"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/mastercard_logo"
            android:layout_width="160dp"
            android:layout_height="100dp" />
    </RelativeLayout>
</LinearLayout>
